extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel='stylesheet', href='/stylesheets/style.css')

block body
    nav.navbar.navbar-fixed-top(role='navigation')
        +navbar("Colenso", "dropdown_menu")
            +nav_item("/", "active") Home
            +nav_item("/authors") Authors
            +nav_item("/places") Places
            +nav_item("/addFile") Add XML
            form.navbar-form.navbar-left(method='get')
                input.form-control(type='text', placeholder='Search...', name='searchString', required=true)
                button.btn.btn-default(type='submit', formaction='/stringSearch') String Search
                button.btn.btn-default(type='submit', formaction='/xQuerySearch') Query Search

    .container.main
        form(action="/add", method="get")
            input(type="text", placeholder='Enter a file path' name="filepath", required=true)
            input(type="submit", value="Add file")
            p e.g. c:\Users\name\documents\colenso\file.xml

    .container.error
        p #{error}
    .container
        .added
            p #{added}