extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel='stylesheet', href='/stylesheets/style.css')

block body
    nav.navbar.navbar-fixed-top(role='navigation')
        +navbar("Colenso", "dropdown_menu")
            +nav_item("/") Home
            +nav_item("/authors", "active") Authors
            +nav_item("/places") Places
            +nav_item("addFile") Add XML
            form.navbar-form.navbar-left(method='get')
                input.form-control(type='text', placeholder='Search...', name='searchString', required=true)
                button.btn.btn-default(type='submit', formaction='/stringSearch') String Search
                button.btn.btn-default(type='submit', formaction='/xQuerySearch') Query Search

    .container.main
        each author in authors
            li: a(href = "/results?author=" + author)
                !{author}